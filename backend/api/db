create database  timestofly;

use timestofly;

CREATE TABLE USER (username VARCHAR(20) primary key, password VARCHAR(20) NOT NULL, tokenId VARCHAR(20), start int(11), expired int(11));

insert into USER values('admin', 'admin', NULL, NULL, NULL);

CREATE TABLE BLOG (ID INT(11) primary key AUTO_INCREMENT, TITLE VARCHAR(50), CONTENT TEXT, POSTED int(11), blogid VARCHAR(20), mediaurl VARCHAR(500));

CREATE TABLE WORK (ID INT(11) primary key AUTO_INCREMENT, NAME VARCHAR(50), EXTRAINFO VARCHAR(100), TOPIC VARCHAR(50), SMALLIMAGE VARCHAR(500), BIGIMAGE VARCHAR(500), LOCATION VARCHAR(500), TOKEN VARCHAR(20));
